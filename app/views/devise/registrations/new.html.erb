<div class="flex justify-center items-center min-h-screen bg-gray-50 p-4">
  <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-2xl border border-gray-100">

    <!-- タイトル: ログインフォームとデザインを統一 -->
    <h1 class="text-3xl font-extrabold text-center text-slate-900 mb-8 pb-2 border-b-2 border-blue-100">
      新規登録
    </h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- 名前 -->
      <div class="mb-6">
        <!-- 修正点: ラベルに mb-1 を適用し、  
を削除 -->
        <%= f.label :name, "名前", class: "block text-sm font-semibold text-gray-800 mb-1" %>
        <%= f.text_field :name, 
            autofocus: true, 
            autocomplete: "name", 
            placeholder: "ユーザー名を入力",
            class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-inner focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150" %>
      </div>

      <!-- メールアドレス -->
      <div class="mb-6">
        <!-- 修正点: ラベルに mb-1 を適用し、  
を削除 -->
        <%= f.label :email, class: "block text-sm font-semibold text-gray-800 mb-1" %>
        <%= f.email_field :email, 
            autofocus: true, 
            autocomplete: "email", 
            placeholder: "メールアドレスを入力",
            class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-inner focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150" %>
      </div>

      <!-- パスワード -->
      <div class="mb-6">
        <!-- 修正点: ラベルに mb-1 を適用し、  
を削除 -->
        <%= f.label :password, class: "block text-sm font-semibold text-gray-800 mb-1" %>
        <% if @minimum_password_length %>
        <em class="text-xs text-gray-500 block mb-1">(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, 
            autocomplete: "new-password", 
            placeholder: "パスワードを入力",
            class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-inner focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150" %>
      </div>

      <!-- パスワード確認 -->
      <div class="mb-6">
        <!-- 修正点: ラベルに mb-1 を適用し、  
を削除 -->
        <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-800 mb-1" %>
        <%= f.password_field :password_confirmation, 
            autocomplete: "new-password", 
            placeholder: "パスワードを再入力",
            class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-inner focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-150" %>
      </div>

      <!-- ボタン -->
      <div class="actions">
        <%= f.submit "新規登録",
            class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-lg text-xl font-bold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 cursor-pointer transform hover:scale-[1.01]" %>
      </div>
    <% end %>

    <!-- リンクエリア -->
    <div class="mt-8 text-center pt-4 border-t border-gray-100">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>